<%- include('../layouts/header') %>

<div class="transfer">
    <form action="/transactions/transfer" method="POST">
        <h1>Transfer Money</h1>
        <div class="form-field">
            <label for="sender">Sender: </label>
            <select name="from" id="sender">
                <option disabled selected>Select a sender</option>
                <% customers.forEach(customer => { %>
                <option value="<%= customer.account %>"><%= customer.email %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-field">
            <label for="reciever">Reciever: </label>
            <select name="to" id="reciever">
                <% if (!Object.keys(reciever).length) { %>
                <option disabled selected>Select a reciever</option>
                <% customers.forEach(customer => { %>
                <option value="<%= customer.account %>"><%= customer.email %></option>
                <% }); %>
                <% } else { %>
                <option selected value="<%= reciever.account %>"><%= reciever.email %></option>
                <% } %>
            </select>
        </div>
        <div class="form-field">
            <label for="amount">Transfer amount: </label>
            <input type="number" id="amount" name="amount" placeholder="Amount">
        </div>
        <button type="submit">Transfer <i class="bi bi-cash-coin"></i></button>
    </form>
</div>

<%- include('../layouts/footer') %>